<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>Selection Committe</display-name>
  <welcome-file-list>
    <welcome-file>main_page.html</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources</param-value>
  </context-param>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
    <param-value>ru</param-value>
  </context-param>
  <context-param>
    <param-name>examTypeList</param-name>
    <param-value>test certificate</param-value>
  </context-param>
  <listener>
    <listener-class>ua.nure.bycheva.SummaryTask4.web.listener.ContextListener</listener-class>
  </listener>
  <listener>
    <listener-class>ua.nure.bycheva.SummaryTask4.web.listener.UserSessionListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>ua.nure.bycheva.SummaryTask4.web.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddFaculty</servlet-name>
    <jsp-file>/WEB-INF/jsp/add_faculty.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddSubject</servlet-name>
    <url-pattern>/addSubject.html</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddSubject</servlet-name>
    <jsp-file>/WEB-INF/jsp/add_subject.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddFaculty</servlet-name>
    <url-pattern>/addFaculty.html</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MainPage</servlet-name>
    <jsp-file>/WEB-INF/jsp/main_page.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainPage</servlet-name>
    <url-pattern>/main_page.html</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>GeneratePDF</servlet-name>
    <servlet-class>ua.nure.bycheva.SummaryTask4.web.GeneratePdfFile</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GeneratePDF</servlet-name>
    <url-pattern>/generatePdf</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>ua.nure.bycheva.SummaryTask4.web.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/WEB-INF/jsp/*</url-pattern>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
  <filter>
    <filter-name>ValidatorFilter</filter-name>
    <filter-class>ua.nure.bycheva.SummaryTask4.web.filter.ValidatorFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ValidatorFilter</filter-name>
    <url-pattern>/WEB-INF/jsp/*</url-pattern>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
  <filter>
    <filter-name>CommandAccessFilter</filter-name>
    <filter-class>ua.nure.bycheva.SummaryTask4.web.filter.CommandAccessFilter</filter-class>
    <init-param>
      <param-name>admin</param-name>
      <param-value>entrantDetails setSheetFinally changeEntrantStatus listEntrants saveSheetEntrant addEntrantToSheet showSheet deleteSheet listSheets addSheet saveSheet updateFaculty editFaculty deleteFaculty addFaculty saveFaculty addFacultySubject saveFacultySubject deleteFacultySubject listSubjects deleteSubject saveSubject editSubject updateSubject generateSheet</param-value>
    </init-param>
    <init-param>
      <param-name>entrant</param-name>
      <param-value>deleteApplication applyFaculty createApplication listApplications listMarks updateMarks deleteMark addMark saveMark</param-value>
    </init-param>
    <init-param>
      <param-name>common</param-name>
      <param-value>logout updateSettings settingsView listFaculties</param-value>
    </init-param>
    <init-param>
      <param-name>out-of-control</param-name>
      <param-value>login register noCommand selectLanguage</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CommandAccessFilter</filter-name>
    <servlet-name>Controller</servlet-name>
  </filter-mapping>
  <error-page>
    <exception-type>java.lang.Throwable</exception-type>
    <location>/WEB-INF/jsp/error_page.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/jsp/error_page.jsp</location>
  </error-page>
</web-app>